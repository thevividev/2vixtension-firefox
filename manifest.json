{
  "manifest_version": 3,

  "name": "2VIxtension",
  "description": "Notifications quand TheVivi est en live",
  "version": "2.0.0",
  "icons": {
    "16": "/assets/16.png",
    "48": "/assets/48.png",
    "128": "/assets/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "bretheskevin@gmail.com"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
